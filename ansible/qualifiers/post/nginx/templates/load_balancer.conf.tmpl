upstream kubernetes_backend_http {
    server 10.0.{{ octet_a }}.5:30080;
    server 10.0.{{ octet_a }}.255:30080;
    server 10.0.{{ octet_b }}.0:30080;
    server 10.0.{{ octet_b }}.77:30080;
}

upstream kubernetes_backend_https {
    server 10.0.{{ octet_a }}.5:30443;
    server 10.0.{{ octet_a }}.255:30443;
    server 10.0.{{ octet_b }}.0:30443;
    server 10.0.{{ octet_b }}.77:30443;
}

server {
    listen 80;

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
        proxy_pass http://kubernetes_backend_http;
    }
}

server {
    listen 443;

    ssl_certificate     /etc/ssl/certs/fullchain.crt;
    ssl_certificate_key /etc/ssl/certs/private.key;

    ssl on;

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
        proxy_pass https://kubernetes_backend_https;
    }
}
